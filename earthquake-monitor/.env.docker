# Environment configuration for Docker deployment
DATABASE_URL=postgresql://postgres:password@db:5432/earthquake_monitor
REPOSITORY_TYPE=postgresql

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# USGS API Configuration
USGS_API_BASE_URL=https://earthquake.usgs.gov/fdsnws/event/1
USGS_GEOJSON_BASE_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary
USGS_API_TIMEOUT=30
USGS_POLLING_INTERVAL=300

# Application
APP_NAME=Earthquake Monitor API
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
